<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/button"
        android:layout_width="75dp"
        android:layout_height="61dp"
        android:layout_marginStart="336dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/descarga"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pulsa en el boton buscar para encontrar resultados en la base de datos"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAbogados"
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_weight="150dp">


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige con quien desea contactar:"/>

    </LinearLayout>

    <Button
        android:id="@+id/buscador"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="15dp"
        android:text="Buscar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            ></Spinner>

        <Button
            android:id="@+id/llamar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borderedondo"
            android:text="Llamar" />

        <Button
            android:id="@+id/contactar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borderedondo"
            android:text="Contactar" />

        <Button
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borderedondo"
            android:text="chat" />


    </LinearLayout>


</LinearLayout>